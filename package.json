{
  "name": "react-responsive-modal",
  "version": "4.0.1",
  "description": "A simple responsive and accessible react modal",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/mylib.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test:only": "tsdx test --passWithNoTests",
    "test:coverage": "yarn test:only --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "test": "yarn test:coverage && yarn lint && yarn build && yarn dtslint && yarn size && yarn docz:build",
    "size": "size-limit",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,css,scss,json,md,mdx}\"",
    "generate-props": "node scripts/generateReactPropsTable.js src/modal.js && yarn prettier"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./__tests__/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/docs/",
      "<rootDir>/__tests__/setupTests.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "keywords": [
    "react",
    "responsive",
    "modal",
    "mobile",
    "flex"
  ],
  "repository": "git+https://github.com/pradel/react-responsive-modal.git",
  "author": "LÃ©o Pradel",
  "bugs": {
    "url": "https://github.com/pradel/react-responsive-modal/issues"
  },
  "homepage": "https://react-responsive-modal.leopradel.com/",
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "8 KB"
    }
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "focus-trap-js": "^1.0.9",
    "no-scroll": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@types/classnames": "2.2.10",
    "@types/jest": "25.2.1",
    "@types/no-scroll": "2.1.0",
    "@types/react": "16.9.32",
    "@types/react-dom": "16.9.6",
    "@types/react-transition-group": "4.2.4",
    "codecov": "3.6.5",
    "husky": "4.2.3",
    "prettier": "2.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "size-limit": "1.3.1",
    "tsdx": "0.13.1",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  }
}
