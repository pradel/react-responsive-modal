{
  "name": "react-responsive-modal",
  "version": "3.0.3",
  "description": "A simple responsive react modal",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "jsnext:main": "lib/index.es.js",
  "types": "types",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "lint": "eslint 'src' 'docs/src' '__tests__'",
    "test": "yarn test:coverage && yarn lint && yarn build && yarn dtslint && yarn size",
    "test:only": "jest",
    "test:coverage": "yarn test:only --coverage",
    "size": "size-limit",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,css,scss,json,md}\"",
    "dtslint": "dtslint types",
    "generate-props": "node scripts/generateReactPropsTable.js src/modal.js && yarn prettier"
  },
  "files": [
    "lib",
    "types",
    "src"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "./__tests__/setupTests.js",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/docs/",
      "<rootDir>/__tests__/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [
    "react",
    "responsive",
    "modal",
    "flex"
  ],
  "repository": "git+https://github.com/pradel/react-responsive-modal.git",
  "author": "LÃ©o Pradel",
  "bugs": {
    "url": "https://github.com/pradel/react-responsive-modal/issues"
  },
  "homepage": "https://github.com/pradel/react-responsive-modal#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "no-scroll": "^2.1.1",
    "prop-types": "^15.6.1",
    "react-lifecycles-compat": "^3.0.4",
    "react-minimalist-portal": "^2.2.0",
    "react-transition-group": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@types/react": "16.3.17",
    "@types/react-dom": "16.0.5",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "codecov": "3.0.2",
    "dtslint": "0.3.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-jsx-import": "0.0.1",
    "eslint-plugin-react": "7.8.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.4.4",
    "jest-enzyme": "6.0.1",
    "prettier": "1.13.4",
    "react": "16.3.2",
    "react-docgen": "2.20.1",
    "react-dom": "16.3.2",
    "rollup": "0.59.4",
    "rollup-plugin-babel": "3.0.4",
    "rollup-plugin-peer-deps-external": "2.1.1",
    "rollup-plugin-postcss": "1.6.2",
    "size-limit": "0.18.1"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "7 KB"
    }
  ],
  "license": "MIT"
}
