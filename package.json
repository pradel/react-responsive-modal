{
  "private": true,
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,ts,tsx,css,scss,json,md,mdx,yml}\""
  },
  "workspaces": [
    "react-responsive-modal",
    "website"
  ],
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,scss,json,md,mdx,yml}": "prettier --write"
  },
  "devDependencies": {
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "3.6.2"
  },
  "version": "7.0.0",
  "packageManager": "yarn@4.9.2"
}
